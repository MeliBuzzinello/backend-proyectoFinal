<style>
  .table td, .table th { vertical-align: middle; }
</style>

{{#if productos.length}}
  <h2>Lista de Productos</h2>
  <div class="table-responsive">
    <table class="table table-dark">
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto</th>
      </tr>
      {{#each productos}}
        <tr>
          <td><a
              type="button"
              onclick="llenarFormulario('${prod.title}', '${prod.price}','${prod.thumbnail}')"
              title="copiar a formulario..."
            >${prod.title}</a></td>
          <td>${{this.price}}</td>
          <td><img width="50" src={{this.thumbnail}} alt="not found" /></td>
          <td><a
              type="button"
              onclick="borrarProducto('${prod.id}')"
            >borrar</a></td>
          <td><a
              type="button"
              onclick="actualizarProducto('${prod.id}')"
            >actualizar</a></td>
        </tr>
      {{/each}}
    </table>
  </div>
{{/if}}